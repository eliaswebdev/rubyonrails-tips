<p id="notice"><%= notice %></p>
<h1>Cars</h1>
<table class="table">
  <thead>
    <tr>
      <th>Plate</th>
      <th>Color</th>
      <th>Engine</th>
      <th>Gearbox</th>
      <th>Doors</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.plate %></td>
        <td><%= car.color %></td>
        <td><%= car.engine %></td>
        <td><%= car.gearbox %></td>
        <td><%= car.doors %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Car', new_car_path %>
